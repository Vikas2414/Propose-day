<div class="container">
    <h1>üíç A Question... üíç</h1>

    <button id="startBtn">Tap to Open üíå</button>

    <div id="content" class="hidden">
        <p class="message" id="typingText"></p>

        <img class="gif" src="https://media.giphy.com/media/26BRv0ThflsHCqDrG/giphy.gif">

        <div style="position: relative; height: 80px;"> 
            <button id="yesBtn">Yes, Forever! üíç</button>
            <button id="noBtn">No way üôà</button>
        </div>
    </div>
</div>

<script>
const startBtn = document.getElementById("startBtn");
const content = document.getElementById("content");
const typingText = document.getElementById("typingText");
const yesBtn = document.getElementById("yesBtn");
const noBtn = document.getElementById("noBtn");

// Background hearts effect
function createHearts() {
    const container = document.getElementById('hearts-container');
    for(let i=0; i<15; i++) {
        const heart = document.createElement('div');
        heart.classList.add('heart');
        heart.innerHTML = '‚ù§Ô∏è';
        heart.style.left = Math.random() * 100 + 'vw';
        heart.style.animationDuration = (Math.random() * 3 + 4) + 's';
        heart.style.fontSize = (Math.random() * 20 + 10) + 'px';
        container.appendChild(heart);
    }
}
createHearts();

// PROPOSE DAY MESSAGE
const message = 
`My Dearest Ras Malai ‚ù§Ô∏è

Yesterday was about the rose,
but today is about the heart that holds it.

I don't just want to be your memory,
I want to be your future.
I don't just want to hold your hand,
I want to hold your heart.

Na chahat hai sitaron ki,
Na tamanna hai nazaron ki,
Bas ek hi dua hai in hothon pe,
Ki tu ban jaye kismat hamari... ‚ú®

Viku is asking you formally...
Will you be mine? üíç`;

let index = 0;

startBtn.onclick = () => {
    content.classList.remove("hidden");
    startBtn.style.display = "none";
    // Try to unmute/play video on interaction if browser blocked autoplay
    document.querySelector('iframe').src += "&autoplay=1";
    typeEffect();
};

function typeEffect() {
    if (index < message.length) {
        typingText.innerHTML += message.charAt(index);
        index++;
        setTimeout(typeEffect, 40); 
    }
}

yesBtn.onclick = () => {
    content.innerHTML = `
        <h1 style="font-size: 28px; color: #ff3b6f;">SHE SAID YES! üíçüò≠</h1>
        <p class="message" style="text-align: center; font-weight: bold;">
            Locking this deal forever! ‚ù§Ô∏è<br>
            No returns, no exchanges!<br>
            I love you infinite!
        </p>
        <img class="gif" src="https://media.giphy.com/media/T86i6yDyOYz7J6dPhf/giphy.gif">
    `;
    
    // Confetti effect (simple version using hearts)
    setInterval(createHearts, 300);
};

// The tricky "No" button logic
const moveButton = () => {
    const x = Math.random() * (window.innerWidth - 150);
    const y = Math.random() * (window.innerHeight - 150);
    
    noBtn.style.position = "fixed";
    noBtn.style.left = x + "px";
    noBtn.style.top = y + "px";
};

// Works on Desktop (Mouse)
noBtn.onmouseover = moveButton;

// Works on Mobile (Touch) - crucial!
noBtn.ontouchstart = (e) => {
    e.preventDefault(); // Prevents clicking
    moveButton();
};

</script>

</body>
